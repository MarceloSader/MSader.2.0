@{
    ViewData["Title"] = "Destra";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div role="main" class="main" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
    <section class="page-header page-header-modern page-header-md" style="color: #0B2430">
        <div class="container">
            <div class="row">
                <div class="col-md-8 order-2 order-md-1 align-self-center p-static">
                    <h1 class="text-white">LinkWise <strong>Admin</strong></h1>
                </div>
                <div class="col-md-4 order-1 order-md-2 align-self-center">
                    <ul class="breadcrumb d-block text-md-end">
                        <li><a href="~/home/index" style="color:#FFFFFF">Home</a></li>
                        <li class="active" style="color:#EEEEEE">Admin</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container container-xl-custom" style="font-family: segoi 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
        <div class="row">
            <div class="col-md-12 pt-5">
                <h2 class="font-weight-bold text-10 line-height-2 appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="500"><span class="text-5">Post</span></h2>
                <h4 class="text-6 line-height-6 font-weight-normal appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="800"><span class="opacity-6">Criando um post na Linkwise.</span></h4>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div id="divPostForm">
                                    <div class="">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Blog</label>
                                                    @Html.DropDownList("Blog", (SelectList)ViewBag.Blogs, null, new { @class = "form-control populate py-2", @data_plugin_selecttwo = "" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">ID do Post</label>
                                                    <input type="text" value="@ViewBag.IDPost" data-msg-required="" class="form-control text-3 h-auto py-2" id="IDPost" required="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Autor</label>
                                                    @Html.DropDownList("Pessoa", (SelectList)ViewBag.Pessoas, null, new { @class = "form-control populate py-2", @data_plugin_selecttwo = "" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Tipo do Post</label>
                                                    @Html.DropDownList("TipoPost", (SelectList)ViewBag.TiposPost, null, new { @class = "form-control populate py-2", @data_plugin_selecttwo = "" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-lg-6">
                                                <label class="form-label mb-1 text-2">Âncora</label>
                                                <input type="text" value="" data-msg-required="" class="form-control text-3 h-auto py-2" id="DSAncoraPost" required="">
                                            </div>
                                            <div class="form-group col-lg-3">
                                                <label class="form-label mb-1 text-2">Criado em</label>
                                                <input type="text" value="" data-msg-required="" class="form-control text-3 h-auto py-2" id="DTCriacaoPost" required="">
                                            </div>
                                            <div class="form-group col-lg-3">
                                                <label class="form-label mb-1 text-2">Publicado em</label>
                                                <input type="text" value="" data-msg-required="" class="form-control text-3 h-auto py-2" id="DTPublicacaoPost" required="">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-lg-12">
                                                <label class="form-label mb-1 text-2">Título do Post</label>
                                                <input type="text" value="" data-msg-required="" class="form-control text-3 h-auto py-2" id="DSTituloPost" required="">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-lg-12">
                                                <label class="form-label mb-1 text-2">Subtítulo do Post</label>
                                                <textarea type="text" rows="3" data-msg-required="" class="form-control text-3 h-auto py-2" id="DSSubTituloPost" required=""></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-lg-12">
                                                <label class="form-label mb-1 text-2">Texto</label>
                                                <textarea type="text" rows="14" data-msg-required="" class="form-control text-3 h-auto py-2" id="DSTextoPost" required=""></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-lg-12">
                                                <label class="form-label mb-1 text-2">Tags</label>
                                                <input type="text" value="" data-msg-required="" class="form-control text-3 h-auto py-2" id="DSTags" required="">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-lg-6">
                                                <label class="form-label mb-1 text-2">Acesso Restrito</label><br />
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="acessoRestrito" id="acessoRestritoSim" value="1">
                                                    <label class="form-check-label" for="acessoRestritoSim">Sim</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="acessoRestrito" id="acessoRestritoNao" value="0">
                                                    <label class="form-check-label" for="acessoRestritoNao">Não</label>
                                                </div>
                                            </div>
                                            <div class="form-group col-lg-6">
                                                <label class="form-label mb-1 text-2">Ativo</label><br />
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="ativo" id="ativoSim" value="1">
                                                    <label class="form-check-label" for="ativoSim">Sim</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="ativo" id="ativoNao" value="0">
                                                    <label class="form-check-label" for="ativoNao">Não</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 text-right" style="text-align:right">
                                                <button type="button" class="btn btn-primary" onclick="savePost()" id="btnSalvarDados">Salvar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="col-lg-6">
                        <div id="divPostHtml">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h4 id="DSTituloPostHtml"></h4>
                                    <h6 id="DSSubTituloPostHtml"></h6>
                                    <div id="DSTextoPostHtml"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

</div>



<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/jquery/jquery.slim.min.js"></script>
<script src="~/vendor/datatables/datatables.min.js"></script>

<script src="~/js/custom/admin-Post.js?=0.3"></script>