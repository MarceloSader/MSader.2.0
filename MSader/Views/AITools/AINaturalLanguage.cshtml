@{
    ViewData["Title"] = "AI Natural Language";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" class="main">

    <div class="container container-xl-custom">
        <div class="row">
            <div class="col-lg-6 pt-5">
                <h2 class="font-weight-bold text-10 line-height-2 appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="500"><span class="text-5">Natural Language com Azure AI</span></h2>
                <h4 class="text-6 line-height-6 font-weight-normal appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="800"><span class="opacity-6">Soluções funcionais baseadas em inteligência artificial para o processamento e compreensão de linguagem natural, utilizando os recursos avançados da plataforma Azure.</span></h4>
                <a class="btn btn-primary btn-with-arrow mb-2 ms-0 ps-0 appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="1100" href="#">Contact Me <span><i class="fas fa-chevron-right"></i></span></a>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <div class="container">
        <div class="row">
            <div class="col">
                <h4>Funcionalidades</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="tabs">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item active" role="presentation">
                            <a class="nav-link active" href="#popular" data-bs-toggle="tab" aria-selected="true" role="tab">Transcrição Áudio</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" href="#recent" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">Geração de Conteúdo</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="popular" class="tab-pane active show" role="tabpanel">
                            <h4>Transcrição Áudio</h4>
                            <div class="tab-pane tab-pane-navigation active" id="formsStyleDefault" role="tabpanel">

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <form class="formTransciptionAudio" action="" method="POST" novalidate="novalidate">
                                                <div class="row">
                                                    <div class="form-group col">
                                                        <label class="form-label mb-1 text-2">Prompt</label>
                                                        <textarea maxlength="5000" data-msg-required="Please enter your message." rows="8" class="form-control text-3 h-auto py-2" name="message" required=""></textarea>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col-lg-6">
                                                        <label class="form-label mb-1 text-2">Arquivo de áudio</label>
                                                        <input type="file" value="" data-msg-required="Please, enter your audio file" maxlength="100" class="form-control text-3 h-auto py-2" id="fileAudio" name="fileAudio" required="">
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group col">
                                                        <input type="submit" value="Submit Form" class="btn btn-primary" data-loading-text="Loading...">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="recent" class="tab-pane" role="tabpanel">
                        <p>Geração de Conteúdo</p>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitat.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


